#navigation
  = render 'form'
.results
  #info
    %p Found #{pluralize(@search.results.size, 'result')} for "#{@search.query}"...
  %ol
    - @search.results.each do |result|
      %li
        %h3= link_to result.title, result.url, data: { url: result_path(result) }
        %cite= truncate_url(result.url, length: 100)
        %p= truncate(result.description, length: 300).html_safe